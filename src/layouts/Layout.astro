---
import '@/styles/global.css'
import Noise from '@/components/Noise.astro';
import '@fontsource-variable/jost';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Evento de boxeo entre streamers y creadores de contenido, organizado por Ebai Llanos" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="canonical" href="https://lavelada.es">
		<title>{title}</title>
	</head>
	<body>
		<Noise />
		<div class="w-full px-10 pt-16 mx-auto">
			<slot />
		</div>
	</body>
</html>
<style is:global>
	html {
		font-family: 'Jost Variable', system-ui, sans-serif;
		background: #ddd;
	}
</style>
